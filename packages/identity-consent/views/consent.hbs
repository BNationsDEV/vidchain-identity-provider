<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VIDchain Login</title>
  <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios@0.12.0/dist/axios.min.js"></script>
</head>

<body>
    <div id="login-app" class="formLogin">
      <img id="logo" class ="logo" src="/logo__Vidchain.png"></img>
      <div  class="formSquare">
        <input type="hidden" name="_csrf" value={{csrfToken}}>
        <input type="hidden" name="challenge" value={{challenge}}>
        <img id="logo"></img>
        <!-- <h3> Hi user, application <strong>client.client_name client.client_id</strong> wants access resources on your behalf and to:</h3>
        <div class="checkboxes">
          <input type="checkbox" id="requested_scope" value=requested_scope name="grant_scope" v-bind:value="requested_scope">
          <label for="requested_scope">requested_scope</label>
        </div> -->
        <h3> Hi {{user}}, application <strong>{{client.client_name}} {{client.client_id}}</strong> wants access resources on your behalf and to:</h3>
        <div class="checkboxes">
          <input type="checkbox" id={{requested_scope}} value={{requested_scope}} name="grant_scope" v-bind:value="requested_scope">
          <label for={{requested_scope}}>{{requested_scope}}</label>
        </div>
       
        <button class="acceptButton" v-on:click="consent">Allow Access</button>
        <input class="denyButton" type="submit" id="reject" name="submit" value="Deny access"> 
        <p>Do you want to be asked next time when this application wants to access your data? The application will
          not be able to ask for more permissions without your consent.</p>
        <div class="checkboxes">
          <input type="checkbox" id="remember" name="remember" v-bind:value="remember" value="1">
          <label for="remember">Do not ask me again</label>
        </div>
        <div class="policy">
          <a href=client.policy_uri>Policy </a>
        </div>
        <div class="policy">
          <a href=client.tos_uri>Terms of Service </a> <br>
        </div>
      </div>
  </div>

  <script>
    const app = new Vue({
      el: '#login-app',
      data: {
        title: 'An application requests access to your data!',
        validationResult: '',
        socket: null,
        clientUriRedirect: '',
        remember:false,
        requested_scope: []
      },
      methods: {
        consent() {
          let urlParams = new URLSearchParams(window.location.search);
          let consent_challenge = urlParams.get('consent_challenge');
          const body = {
            challenge: consent_challenge,
            remember: this.remember,
            grant_scope: this.requested_scope
          };
          console.log(body);
          axios.post('/consent', body)
            .then ((res)=> window.location = res.data)
            .catch ((error)=> console.log(error))
        },

      },
      created() {
        if(client.logo_uri){
            var img = document.getElementById('logo')
            img.src = client.logo_uri
        }
      }
    });

  </script>

  <style scoped>
    .formSquare {
        background-color: #00bf71;
        border-radius: 20px;
        color: #ffff;
        width: 45%;
        height: 65%;
        align-self: center;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 2%;
    }
    .formLogin {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      background: #ffff;
      padding: 1rem 1.25rem;
      color: #00bf71;
      position: absolute;
      width: 100%;
      height: 100%;
      margin-left: -10px;
      margin-top: -10px;
    }
    .logo{
      width: 20%;
      height: 25%;
      align-self: center;
    }
    .acceptButton {
      display: block;
      cursor: pointer;
      outline: none;
      border: none;
      background-color: #ffff;
      width: 50%;
      height: auto;
      padding: 2%;
      border-radius: 30px;
      font-size: 1.5rem;
      font-weight: 600;
      color:  #00bf71;
      background-size: 100% 100%;
      box-shadow: 0 0 0 7px var(--light) inset;
      align-self: center;
      margin-top: 5%;
    }
    .checkboxes{
      align-self: center;
      margin-bottom: 5%;
    }
    .policy{
      align-self: center;
      margin-bottom: 2%;
    }
    .denyButton {
      display: block;
      cursor: pointer;
      text-decoration: underline;
      outline: none;
      border: none;
      background-color: #00bf71;
      width: 35%;
      height: 30px;
      border-radius: 30px;
      font-size: 1.0rem;
      font-weight: 300;
      color:  #000000;
      background-size: 100% 100%;
      box-shadow: 0 0 0 7px var(--light) inset;
      margin: 0 auto;
      margin-top: 2%;
      margin-bottom: 5%;
    }
    .qrImage{
      width: 55%;
      height: 55%;
      align-self: center;
      margin-top: 5%;
    }
    .back {
      background-color: #00bf71;
    }
    .remember{
      margin-top: 55%;
    }
  </style>
</body>

</html>