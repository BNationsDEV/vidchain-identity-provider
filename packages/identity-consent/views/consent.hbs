<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VIDchain Login</title>
  <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios@0.12.0/dist/axios.min.js"></script>
</head>

<body>
    <div id="login-app" class="formLogin">
      <input type="hidden" name="_csrf" value={{csrfToken}}>
      <input type="hidden" name="challenge" value={{challenge}}>
      <img id="logo" class ="logo" src="/static/logo__Vidchain.png"></img>
        <!-- <h3> Hi user, application <strong>client.client_name client.client_id</strong> wants access resources on your behalf and to:</h3>
        <div class="checkboxes">
          <input type="checkbox" id="requested_scope" value=requested_scope name="grant_scope" v-bind:value="requested_scope">
          <label for="requested_scope">requested_scope</label>
        </div> -->
        <h1 class="title"> Hi, {{user}} </h1>
        <h3 class="subtitle">The application <strong>{{client.client_name}} {{client.client_id}}</strong> wants access resources on your behalf and to:</h3>
        <ul class="checkboxes">
          {{#each requested_scope}}
          <li>
            <input type="checkbox" id={{@index}} value={{this}} name="grant_scope" v-on:change="selected($event)">
            <label for={{this}}>{{this}}</label>
          </li>
          {{/each}}
        </ul>
       
        <button class="acceptButton" v-on:click="consent">Allow Access</button>
        <input class="denyButton" type="submit" id="reject" name="submit" value="Deny access"> 
        <p class="subtitle">Do you want to be asked next time when this application wants to access your data? The application will
          not be able to ask for more permissions without your consent.</p>
        <div class="checkboxes">
          <input type="checkbox" id="remember" name="remember" v-bind:value="remember" value="1">
          <label for="remember">Do not ask me again</label>
        </div>
        <div class="policy">
          <a href=client.policy_uri>Policy </a>
        </div>
        <div class="policy">
          <a href=client.tos_uri>Terms of Service </a> <br>
        </div>
      </div>
  </div>

  <script>
    const app = new Vue({
      el: '#login-app',
      data: {
        title: 'An application requests access to your data!',
        validationResult: '',
        socket: null,
        clientUriRedirect: '',
        remember:false,
        requested_scope: []
      },
      methods: {
        consent() {
          let urlParams = new URLSearchParams(window.location.search);
          let consent_challenge = urlParams.get('consent_challenge');
          const body = {
            challenge: consent_challenge,
            remember: this.remember,
            grant_scope: this.requested_scope
          };
          console.log(body);
          //axios.post('/consent', body)
            //.then ((res)=> window.location = res.data)
            //.catch ((error)=> console.log(error))
        }, 
        selected(type){
          const grant_type = type.target.value;
          //Checking if already exists, 
          const position = this.requested_scope.indexOf(grant_type);
          //If so, then delete form the array (it has been deselected);
          if ( ~position ) this.requested_scope.splice(position, 1);
          //otherwise add it to the array
          else this.requested_scope.push(grant_type);
        }

      },
      created() {
        if(client.logo_uri){
            //var img = document.getElementById('logo')
            //img.src = client.logo_uri
        } 
      }
    });

  </script>

  <style scoped>
    .title{
      word-wrap: break-word;
      -webkit-hyphens: auto;
      -moz-hyphens: auto;
      -ms-hyphens: auto;
      -o-hyphens: auto;
      hyphens: auto;
      align-self: center;
      color: #00bf71;
    }
    @media screen and (max-width: 768px) {
    .title{
        font-size:14px;
    }
    }
    .subtitle{
      align-self: center;
      color: #000000;
    }
    .formLogin {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      background: #ffffff;
      padding: 1rem 1.25rem;
    }
    .logo{
      max-width: 300px;
      margin: 1%;
      align-self: center;
    }
    .acceptButton {
       display: block;
      cursor: pointer;
      outline: none;
      border: none;
      background-color: #00bf71;
      height: auto;
      padding: 2%;
      border-radius: 20px;
      font-size: 1.5rem;
      font-weight: 600;
      color:  #ffffff;
      background-size: 100% 100%;
      box-shadow: 0 0 0 7px var(--light) inset;
      align-self: center;
      margin-top: 2%;
    }
    .checkboxes{
      align-self: center;
    }
    .policy{
      align-self: center;
      margin-top: 1%;
    }
    .denyButton {
      display: block;
      cursor: pointer;
      text-decoration: underline;
      outline: none;
      border: none;
      background-color: #ffffff;
      width: 35%;
      height: 30px;
      border-radius: 30px;
      font-size: 1.0rem;
      font-weight: 300;
      color:  #000000;
      background-size: 100% 100%;
      box-shadow: 0 0 0 7px var(--light) inset;
